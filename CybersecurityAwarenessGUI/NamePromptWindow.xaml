<Window x:Class="CybersecurityAwarenessGUI.NamePromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome" Height="180" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Welcome! What’s your name?" FontSize="16" Margin="0,0,0,10" />
            <TextBox x:Name="NameInput" Margin="0,0,0,10" KeyDown="NameInput_KeyDown" />
            <Button Content="Continue" Width="100" HorizontalAlignment="Left" Click="Continue_Click" />
        </StackPanel>
    </Grid>
</Window>

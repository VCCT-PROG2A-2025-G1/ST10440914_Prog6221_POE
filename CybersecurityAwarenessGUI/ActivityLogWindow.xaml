<Window x:Class="CybersecurityAwarenessGUI.ActivityLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activity Log" Height="450" Width="500">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Recent Activity Log:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListBox x:Name="LogListBox" Height="320" />
            <Button x:Name="ShowMoreButton" Content="Show More" Width="100" Margin="0,10,0,0" HorizontalAlignment="Left" Click="ShowMoreButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

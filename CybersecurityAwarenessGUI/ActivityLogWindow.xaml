<Window x:Class="CybersecurityAwarenessGUI.ActivityLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activity Log" Height="400" Width="500">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Recent Actions:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListBox x:Name="LogListBox" Height="300"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="CybersecurityAwarenessGUI.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Cybersecurity Task" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Task Title:" FontWeight="Bold" />
            <TextBox x:Name="TaskTitleBox" Margin="0,0,0,10" />

            <TextBlock Text="Task Description:" FontWeight="Bold" />
            <TextBox x:Name="TaskDescBox" Margin="0,0,0,10" />

            <TextBlock Text="Reminder Date (optional):" FontWeight="Bold" />
            <DatePicker x:Name="ReminderDatePicker" Margin="0,0,0,10" />

            <Button Content="Add Task" Width="100" Click="AddTask_Click"/>
        </StackPanel>
    </Grid>
</Window>

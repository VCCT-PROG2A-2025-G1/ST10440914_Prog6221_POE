<Window x:Class="CybersecurityAwarenessGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Awareness Chatbot" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Chat Display -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="ChatDisplay" TextWrapping="Wrap" FontSize="14" />
        </ScrollViewer>

        <!-- Input Area -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
            <TextBox x:Name="UserInput" Width="400" Margin="0,0,10,0" FontSize="14" KeyDown="UserInput_KeyDown" />
            <Button Content="Send" Width="80" Click="SendButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

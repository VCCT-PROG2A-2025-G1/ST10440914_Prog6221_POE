<Window x:Class="CybersecurityAwarenessGUI.QuizWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Quiz" Height="400" Width="600">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="QuestionText" FontSize="16" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,10" />
            <ListBox x:Name="AnswerOptions" Margin="0,0,0,10" />
            <Button Content="Submit Answer" Click="SubmitAnswer_Click" Width="150" Height="30" HorizontalAlignment="Left" />
            <TextBlock x:Name="FeedbackText" Foreground="DarkGreen" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="CybersecurityAwarenessGUI.TaskManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Tasks" Height="400" Width="500">
    <Grid Margin="10">
        <StackPanel>
            <ListBox x:Name="TaskListBox" Height="250" DisplayMemberPath="DisplayText" />
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Mark as Completed" Width="140" Click="MarkCompleted_Click" Margin="0,0,10,0"/>
                <Button Content="Delete Task" Width="100" Click="DeleteTask_Click"/>
            </StackPanel>
            <TextBlock x:Name="StatusText" Foreground="DarkGreen" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>

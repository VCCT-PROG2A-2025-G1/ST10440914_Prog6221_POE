<Window x:Class="CyberChatbotGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Awareness Chatbot" Height="500" Width="800">
    <Grid>
        <TextBlock Text="Welcome to CyberBot!" FontSize="24" Margin="20"/>
        <TextBox x:Name="UserInput" Width="600" Height="30" VerticalAlignment="Bottom" Margin="20"/>
        <Button Content="Send" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20" Click="Send_Click"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20,60,20,60">
            <StackPanel x:Name="ChatHistory"/>
        </ScrollViewer>
    </Grid>
</Window>
